<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.text_area :title, placeholder: "Title post",
      cols: "50", rows: "1" %>
  </div>
  <div class="form-group">
    <%= f.text_area :context, placeholder: "What do you want to post?",
      cols: "50", rows: "2" %>
  </div>
  <div class="col-md-5 col-xs-7"></div>
  <div class="col-md-4 col-xs-5"></div>
  <div class="col-md-3 col-xs-12 ">
    <div class="row">
      <%= f.button "Post", type: "submit", id: "submit_new_post",
        class: "btn btn-dark post-button" %>
    </div>
  </div>
<% end %>
