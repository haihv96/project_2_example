<div class="modal fade bs-modal-lg modal-new-post" id="large" tabindex="-1"
  role="dialog" aria-hidden="true" style="display: none;">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <%= form_for Post.new, html: {class: "new_post"} do |f| %>
        <div class="modal-header bg-blue-steel">
          <button type="button" class="close"
            data-dismiss="modal" aria-hidden="true"></button>
          <h4 class="modal-title bold uppercase font-white">
            <%= t ".new" %>
          </h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :title, class: "control-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :content, class: "control-label" %>
            <%= f.text_area :content, cols: Settings.post.box_size.cols,
              rows: Settings.post.box_size.rows,
              class: "form-control tinymce" %>
          </div>
          <div class="form-group">
            <%= f.label :tags, class: "control-label bold" %>
            <%= f.select :lists_tag, {}, {}, class: "form-control input-lg",
              "data-role": "tagsinput", multiple: true %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger cancel-new-form"
            data-dismiss="modal">
            <%= t ".cancel" %>
          </button>
          <%= f.button t(".submit"), type: "submit", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
