<div class="modal fade bs-modal-lg modal-update-post"
  id="edit_post_<%= post.id %>_id" tabindex="-1"
    role="dialog" aria-hidden="true" style="display: none;">
  <div class="modal-dialog modal-lg">
    <div class="col-md-8 col-md-offset-2">
      <div class="modal-content">
        <%= form_for post, url: post_path(post),
          html: {class: "update_post"} do |f| %>
          <div class="modal-header">
            <button type="button" class="close"
              data-dismiss="modal" aria-hidden="true"></button>
            <h4 class="modal-title">Edit post</h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= f.label :title, class: "control-label" %>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :context, class: "control-label" %>
              <%= f.text_area :context, cols: "50", rows: "10",
                class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger cancel-button"
              data-dismiss="modal">Cancel</button>
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
