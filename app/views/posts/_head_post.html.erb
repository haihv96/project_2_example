<% user = post.user %>
<div class="panel-heading">
  <%= avatar_tag user, width: Settings.user.avatar.head_post %>
  <h3>
    <%= link_to post.user.full_name, user %>
    <div class="time-section">
      <span class="time-ago">
        <%= link_to time_status(post), post %>
      </span>
    </div>
  </h3>
  <div class="panel-title"><strong class="post_title"><%= post.title %></strong>
    <div class="post-tags font-blue-ebonyclay">
      <% if post.tags.try :any? %>
        <hr class="no-padding">
        <i class="fa fa-tags"></i> <%= t ".tag" %>:
        <%= render post.tags_time_line %>
      <% end %>
    </div>
  </div>
</div>
<div class="panel-body">
  <div class="message-block post_content"><%= raw post.content %></div>
</div>
