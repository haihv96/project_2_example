            <%= image_tag gravatar_url(current_user, size: 30),
              class: "profile-image img-circle" %>
            <%= current_user.full_name %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="glyphicon glyphicon-user"></i>
