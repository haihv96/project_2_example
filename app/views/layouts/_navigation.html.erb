<nav class="navbar navbar-custom navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Framgia communication", root_path, class: "navbar-brand" %>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <form method="POST" accept-charset="UTF-8"
            class="navbar-form navbar-left">
        <div class="input-group navbar-input-group">
          <input class="form-control navbar-form-input" placeholder="Search" data-url="http://wall.socialwallscript.com/people/search" autocomplete="off" name="q" type="text">
          <span class="input-group-addon">
            <button type="submit">
              <span class="glyphicon glyphicon-search"></span>
            </button>
          </span>
        </div>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown hidden-xs">
          <%= link_to "#", class: "dropdown-toggle navbar-link",
