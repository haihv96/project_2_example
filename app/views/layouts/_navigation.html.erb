<nav class="navbar navbar-custom navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to t(".title"), root_path, class: "navbar-brand" %>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
      <form method="POST" accept-charset="UTF-8" class="navbar-form navbar-left">
        <div class="input-group navbar-input-group">
          <input class="form-control navbar-form-input" placeholder="Search">
          <span class="input-group-addon">
            <button type="submit">
              <span aria-hidden="true" class="icon-magnifier"></span>
            </button>
          </span>
        </div>
      </form>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="dropdown hidden-xs">
            <%= link_to "#", class: "dropdown-toggle navbar-link",
              "data-toggle": "dropdown" do %>
              <%= avatar_tag current_user,
                width: Settings.user.avatar.current_user,
                class: "profile-image img-circle" %>
              <%= current_user.full_name %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to current_user do %>
                  <span aria-hidden="true" class="icon-user"></span>
                  <%= t ".profile" %>
                <% end %>
              </li>
              <li>
                <%= link_to "#" do %>
                  <span aria-hidden="true" class="icon-users"></span>
                  <%= t ".list_user" %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i> <%= t ".logout" %>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t(".sign_up"), new_user_registration_path,
              class: "navbar-link" %>
          </li>
          <li>
            <%= link_to t(".sign_in"), new_user_session_path,
              class: "navbar-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
