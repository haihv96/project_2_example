<div class="row white-space">
  <div id="flash_message"></div>
  <div class="col-md-8">
    <%= render "shared/slide_show" %>
  </div>
  <div class="col-md-4">
    <%= form_for resource, as: resource_name, html: {id: "register_user"},
      url: registration_path(resource_name) do |f| %>
      <%= render "shared/error_messages", object: resource %>

      <div class="row">
        <h2><%= t ".sign_up" %></h2>
        <div class="form-group ">
          <%= f.text_field :full_name,
            class: "form-control input-lg", placeholder: t(".full_name") %>
        </div>

        <div class="form-group ">
          <%= f.email_field :email,
            class: "form-control input-lg", placeholder: t(".email") %>
        </div>

        <div class="form-group ">
          <%= f.password_field :password,
            class: "form-control input-lg", placeholder: t(".password") %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t ".minimum" %>)</em>
          <% end %><br/>
        </div>

        <div class="form-group ">
          <%= f.password_field :password_confirmation,
            class: "form-control input-lg",
            placeholder: t(".confirm_password") %>
        </div>

        <div class="form-group ">
          <label for="gender"><%= t ".gender" %></label>
          <%= f.select :gender, User.genders.keys.to_a,
            {}, class: "form-control input-lg" %>
        </div>

        <div class="form-group">
          <%= f.button t(".sign_up"), type: "submit", id: "submit_new_user",
            class: "btn btn-lg btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
