<%= form_for resource, as: resource_name, url: registration_path(resource_name),
  html: {method: :put} do |f| %>
  <div class="form-group">
    <div id="current_avatar">
      <%= avatar_tag resource, width: Settings.user.avatar.current_size %>
    </div>
  </div>

  <div class="form-group">
    <span class="btn btn-primary btn-file">
      <span class="fileinput-new"> <%= t ".select_image" %> </span>
      <span class="fileinput-exists"> <%= t ".change" %> </span>
      <%= f.file_field :avatar, id: "file_select",
        accept: Settings.user.avatar.accept %>
    </span>
  </div>

  <div class="form-group">
    <div id="jcrop_field" class="row hide">

      <div class="col-md-8">
        <div class="portlet box">
          <div class="portlet-title bg-blue-steel">
            <div class="caption">
              <span aria-hidden="true" class="icon-magic-wand"></span>
              <%= t ".cropbox" %>
            </div>
          </div>
          <div class="portlet-body">
            <div id="crop_box" class="row">
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="portlet box">
          <div class="portlet-title bg-green-seagreen">
            <div class="caption">
              <span aria-hidden="true" class="icon-magnifier"></span>
              <%= t ".previewbox" %>
            </div>
          </div>
          <div class="portlet-body">
            <div id="preview_box" class="row">
            </div>
          </div>
          <div class="form-group actions">
            <%= f.button t(".update"), type: "submit", id: "button_edit_user",
              class: "btn btn-primary" %>
            <%= f.button t(".cancel"), type: "button",
              class: "btn btn-danger", id: "cancel_edit_user" %>
          </div>
        </div>
      </div>

    </div>
  </div>
<% end %>
