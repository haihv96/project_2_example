<span class="edit_user_button btn btn-circle btn-icon-only blue"
  data-toggle="modal" href="#edit_user_<%= user.id %>_id">
  <i class="fa fa-edit"></i>
</span>
<div class="modal fade bs-modal-lg modal-update-user"
  id="edit_user_<%= user.id %>_id" tabindex="-1"
  role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="col-md-8 col-md-offset-2">
      <div class="modal-content">
        <%= form_for user, url: admin_user_path(user),
          html: {class: "update_user"} do |f| %>
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
              aria-hidden="true"></button>
            <h4 class="modal-title uppercase bold"><%= t ".edit" %></h4>
          </div>
          <div class="modal-body">
            <div class="form-group">
              <%= f.label :email, class: "control-label" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :full_name, class: "control-label" %>
              <%= f.text_field :full_name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :phone, class: "control-label" %>
              <%= f.text_field :phone, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :role, class: "control-label" %>
              <%= f.select :role,
                User.roles.keys.to_a, {}, {class: "form-control"} %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn dark btn-outline cancel-button"
              data-dismiss="modal"><%= t ".cancel" %>
            </button>
            <button type="button" class="btn dark btn-outline reset-button">
              <%= t ".reset" %>
            </button>
            <%= f.submit t(".update"), class: "btn green" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
