{
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "window": true,
    "I18n": true,
    "toastr": true,
    "tinyMCE": true,
    "AppElement": true,
    "Form": true,
    "AjaxFormRequest": true
  },

  "extends": "eslint:recommended",
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
